// Place your settings in this file to overwrite the default settings
{
    "macros": {
        "terminal_execute": [
            "expandSelectionLine",
            "workbench.action.terminal.runSelectedText",
            "cursorDown"
        ],
        "python_terminal_execute": [
            "expandSelectionLine",
            "editor.action.smartSelect.grow",
            "python.execSelectionInTerminal",
            "workbench.action.focusActiveEditorGroup",
            "cursorDown"
        ],
        "jupyter_execute": [
            "expandLineSelection",
            "jupyter.runSelectionLine",
            "cursorDown"
        ]
    },
    "python.linting.pylintArgs": [
        "--disable=C0303,C0111,C0301,E0211,E0213,C0330,E1101,C0103"
    ],
    "python.pythonPath": "ipython",
    "editor.fontFamily": "'Fira Mono', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.minimap.enabled": false,
    "editor.rulers": [
        80,
        120
    ],
    "workbench.iconTheme": "file-icons",
    "vsicons.dontShowNewVersionMessage": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "explorer.confirmDelete": false,
    "workbench.activityBar.visible": true,
    "window.zoomLevel": 1,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.wpn": "json",
        "*.proj": "json",
        "*.ship": "json",
        "*.variant": "json",
        "*.faction": "json"
    },
    "todohighlight.include": [
        "**/*.js",
        "**/*.html",
        "**/*.css",
        "**/*.scss",
        "**/*.c",
        "**/*.h",
        "**/*.py",
        "**/*.go",
        "**/*.java",
        "**/*.R",
    ],
    "workbench.startupEditor": "newUntitledFile",
    "window.menuBarVisibility": "default",
    "workbench.statusBar.visible": true,
    "go.buildOnSave": "off",
    "go.lintOnSave": "workspace",
    "go.liveErrors": {
        "enabled": false,
        "delay": 500
    },
    "markdown.preview.fontSize": 18,
    "atomKeymap.promptV3Features": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.formatOnPaste": true,
    "todohighlight.isEnable": true,
    "workbench.colorTheme": "Frontier (rainglow)",
    "java.saveActions.organizeImports": true,
    "go.installDependenciesWhenBuilding": false,
    "java.autobuild.enabled": false
}
